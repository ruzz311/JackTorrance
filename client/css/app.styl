@import 'nib'
@import 'mixins'


.underwood-font
  font-family 'UnderwoodChampionRegular', Arial, sans-serif
  letter-spacing 0


//
// Main
//
body, html
  height 100%

body
  font normal 1em sans-serif
  background url(img_path('paper.jpg')) fixed
  text-align left
  
h1, h2, h3, h4, h5
  @extends .underwood-font

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #333
  text-shadow 1px 1px 2px white

p
  @extends .underwood-font
  font-size 2em
  margin-bottom 1em

a
  color #000a68


#content
  padding 50px

